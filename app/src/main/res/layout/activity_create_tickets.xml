<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/orange"
    tools:context=".ui.CreateTicketsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TICKETS"
        android:textColor="@color/bluegray"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="20dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="@color/orange">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket Name"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/bluegray"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@color/white"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/bluegray"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:padding="12dp"
            android:inputType="numberDecimal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/quantity_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/bluegray"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:padding="12dp"
            android:inputType="number"
            android:textSize="14sp" />

        <Button
            android:id="@+id/create_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textColor="@color/orange"
            android:backgroundTint="@color/bluegray"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/ticket_item" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textColor="@color/orange"
        android:backgroundTint="@color/bluegray"
        android:textSize="16sp"
        android:layout_margin="16dp" />

</LinearLayout>
